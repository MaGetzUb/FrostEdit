        <contexts>
			<context attribute="Normal Text" lineEndContext="#stay" name="Normal">
				<RegExpr attribute="Keyword" context="#stay" String="\bWhile\b" insensitive="true" beginRegion="WhileRegion"/>
				<RegExpr attribute="Keyword" context="#stay" String="\bWend\b" insensitive="true" endRegion="WhileRegion"/>
				
				<RegExpr attribute="Keyword" context="#stay" String="\s*\bSelect\b" insensitive="true" beginRegion="SelectRegion"/>
				<RegExpr attribute="Keyword" context="#stay" String="\bEnd\s*Select\b" insensitive="true" endRegion="SelectRegion"/>

				<RegExpr attribute="Keyword" context="#stay" String="\bRepeat\b" insensitive="true" beginRegion="RepeatRegion"/>
				<RegExpr attribute="Keyword" context="#stay" String="\bForever\b" insensitive="true" endRegion="RepeatRegion"/>
				<RegExpr attribute="Keyword" context="#stay" String="\bUntil\b" insensitive="true" endRegion="RepeatRegion"/>
				
				<RegExpr attribute="Keyword" context="#stay" String="\bFor\b" insensitive="true" beginRegion="ForRegion"/>
				<RegExpr attribute="Keyword" context="#stay" String="\bNext\b" insensitive="true" endRegion="ForRegion"/>

				<!-- Function can be also a function pointer type-->
				<RegExpr attribute="Keyword" context="#stay" String="^\s*\bFunction\b" insensitive="true" beginRegion="FunctionRegion"/>
				<RegExpr attribute="Keyword" context="#stay" String="\bEnd\s*Function\b" insensitive="true" endRegion="FunctionRegion"/>
        
		        <RegExpr attribute="Keyword" context="#stay" String="\bType\b" insensitive="true" beginRegion="TypeRegion"/>
				<RegExpr attribute="Keyword" context="#stay" String="\bEnd\s*Type\b" insensitive="true" endRegion="TypeRegion"/>

				<RegExpr attribute="Keyword" context="#stay" String="\bStruct\b" insensitive="true" beginRegion="StructRegion"/>
				<RegExpr attribute="Keyword" context="#stay" String="\bEnd\s*Struct\b" insensitive="true" endRegion="StructRegion"/>

			
				<RegExpr attribute="Keyword" context="#stay" String="\bIf\b.*\b(Then)\b\s*$" insensitive="true" beginRegion="IfRegion"/>
				<RegExpr attribute="Keyword" context="#stay" String="\bEnd\s*If\b" insensitive="true" endRegion="IfRegion"/>
						
				<keyword attribute="Keyword" context="#stay" String="keywords"/>
				<keyword attribute="Function" context="#stay" String="functions"/>
				<keyword attribute="PredefinedConstant" context="#stay" String="predefined constants"/>
				<keyword attribute="Identifier" context="#stay" String="types"/>
				<!--<Float attribute="FloatLiteral" context="#stay"/>
				<Int attribute="IntegerLiteral" context="#stay"/>-->
				
				<RegExpr attribute="NumberLiteral" context="#stay" String="\b([0-9]*\.?[0-9]+)\b"/>
				<RegExpr attribute="HexLiteral" context="#stay" String="\b(\$[a-fA-f0-9]+)\b"/>
				
				<DetectChar attribute="String" context="String" char="&quot;"/>
				<DetectChar attribute="Comment" context="Comment" char="'"/>
				<Detect2Chars attribute="Comment" context="Comment" char="/" char1="/"/>
				<RegExpr attribute="Comment" context="Comment2" String="\b(Rem)\b" beginRegion="multilineComment"/>	
			</context>
        
			<context name="Comment" attribute="Comment" lineEndContext="#pop"/>
			<context name="Comment2" attribute="Comment" lineEndContext="#stay">
				<RegExpr attribute="Comment" String="\b(EndRem)\b" context="#pop" endRegion="multilineComment"/>
			</context>
			<context name="String" attribute="String" lineEndContext="#pop">
				<DetectChar attribute="String" context="#pop" char="&quot;"/>
			</context>
		
        </contexts>
