<?xml version="1.0" encoding="UTF-8"?>
<colorscheme version="1.0" name="Nightglow">
	  <style name="Text" foreground="#6b97dc" background="#000018"/>
	  <!--<style name="SearchResult" foreground="#822676" background="#7785ff"/>
	  <style name="SearchScope" foreground="#000000" background="#f5faff"/> -->
	  <style name="Number" foreground="#ff9b9b"/> <!-- Kate supports different number base formats, but we uses only one -->
	  <style name="String" foreground="#00ffff"/> <!-- Kate uses different formats for String and Char, we use only String format -->
	  <style name="Datatype" foreground="#0044ff" bold="false" italic="true"/>
	  <style name="Function" foreground="#ee6600"/>
	  <style name="Keyword" foreground="#0044ff" bold="false"/>
	  <!-- These are for Fate highlighter -->
	  <style name="Link" foreground="#aaaa00"/>
	  <style name="Selection" foreground="#aaffff" background="#335a7f"/>
	  <style name="Parentheses" foreground="#ff0000"/>
	  <style name="Type" foreground="#983132" bold="true" italic="true"/>
	  <style name="Local" foreground="#76328c"/>
	  <style name="Global" foreground="#8c3276"/>
	  <style name="Field" foreground="#ba7ce1"/>
	  <style name="Operator" foreground="#66bbcc"/>
	  <style name="Label" foreground="#800000"/>
	  <style name="Comment" foreground="#bc0000" italic="true"/>
	  <style name="CurrentLine" foreground="#000000" background="#c2e1ff"/>
	  <style name="SimilarOccurance" foreground="#ffffff" background="#00c8ff"/>
	  <style name="RegionVisualizer" foreground="#96a0be" background="#283246"/>
	  <style name="RegionVisualizerSelected" foreground="#bea000" background="#463228"/>
	  <style name="LineNumber" foreground="#96a0be" background="#283246"/>
	  <!-- These affects to Console widgets. These could be under their 
			own sub section but it's not worth of doing. -->
	  <style name="StdOut" foreground="#0096c0"/>
	  <style name="StdErr" foreground="#ff0000"/>
	  <style name="ConsoleText" foreground="#6b97dc" background="#000018"/>
	  <!-- These affects to issue list widget -->
	  <style name="IssueError" foreground="#ff0000"/>
	  <style name="IssueWarning" foreground="#0096c0"/>
</colorscheme>
